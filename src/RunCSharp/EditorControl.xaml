<UserControl x:Class="RunCSharp.EditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RunCSharp"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <avalonedit:TextEditor 
            Grid.Row="0"
            Padding="5"
            SyntaxHighlighting="C#"
            Document="{Binding Path=EditorDocument, Mode=TwoWay}"
            KeyDown="TextEditor_KeyDown"/>
        <Button Grid.Row="1" Content="Run (Ctrl + Return)" Command="{Binding Path=RunCommand}" />
    </Grid>
</UserControl>
